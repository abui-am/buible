---
import SectionWithTitle from '../components/SectionWithTitle.astro';
import Skill from '../components/Skill.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title='Welcome to Astro.'>
  <main class='bg-primary-200'>
    <div style='height: calc(97vh - 68px - 68px - 32px);' class='relative'>
      <img src='/images/profile.jpg' class='object-cover h-full' />
      <div
        class='from-[rgba(0,0,0,0.8)] to-transparent bg-gradient-to-t absolute bottom-0 p-6 w-full h-2/5 justify-end flex flex-col'
      >
        <h2 class='font-bold text-3xl text-white'>Abuidillah Adjie Muliadi</h2>
      </div>
    </div>
    <div class='p-6 flex-col flex gap-8'>
      <SectionWithTitle title='About me'>
        <div class='font-bold text-lg'>
          hit me on <a
            class='underline'
            href='https://www.linkedin.com/in/abuidillah-adjie-muliadi-bb0816190/'
          >
            LinkedIn</a
          >
           üòè
        </div>
      </SectionWithTitle>
      <Skill
        title='Front-end skills'
        skills={[
          'ReactJS',
          'NextJS',
          'Javascript',
          'Typescript',
          'HTML',
          'CSS',
          'TailwindCSS',
        ]}
      />
      <Skill
        title='Back-end skills'
        skills={['ExpressJS', 'Javascript', 'Typescript', 'PHP']}
      />

      <Skill
        title='Additional skills'
        skills={['Figma', 'Adobe Illustrator', 'Adobe Photoshop', 'Canva']}
      />
    </div>
  </main>

  <style></style>
</Layout>
